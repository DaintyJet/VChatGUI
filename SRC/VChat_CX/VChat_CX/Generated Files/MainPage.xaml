<Page
    x:Class="VChat_CX.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VChat_CX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="706">

    <Grid>
        <Button x:ConnectionId='2' Content="Button" Height="135" Margin="274,0,0,0" Width="191"                     />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <ScrollViewer x:ConnectionId='3' x:Name="myScrollViewer" Width="300" Height="150" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto">
                <TextBox x:ConnectionId='4' x:Name="VChatOutput"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch"
                         IsReadOnly="True"
                         BorderThickness="0"/>
            </ScrollViewer>
        </StackPanel>


    </Grid>
</Page>

